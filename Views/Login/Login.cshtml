@model Reciicer.Models.LoginViewModels.LoginViewModel
@{
    ViewData["Title"] = "Reciicer";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div>
        <form asp-action="Login" method="post" class="text-center mt-3">
            <div class="mt-2 row">
                <div class="col-md-5 mx-auto">
                    <label asp-for="Email" class="col-form-label"></label>
            
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-2 row">
                 <div class="col-md-5 mx-auto ">
                    <label asp-for="Password" class="col-form-label"></label>
               
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group my-2">
                <input asp-for="RememberMe" />
                <label asp-for="RememberMe"></label>
            </div>
            <button type="submit" class="btn btn-primary mt-2 col-md-5">Login</button>
        </form>

        <div class="text-center my-2">
            <a asp-action="Register">Deseja se Cadastrar?</a>
        </div>
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}