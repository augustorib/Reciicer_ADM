@model Reciicer.Models.LoginViewModels.RegisterViewModel


<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">
                    @* <div class="login-logo">
                        <a href="#">
                            <img src="images/icon/logo.png" alt="CoolAdmin">
                        </a>
                    </div> *@
                    <div class="login-logo">
                        <h2>Reciicer</h2>
                    </div>
                    <div class="login-form">
                        <form asp-action="Register" method="post">
                            <div class="my-3">
                                <label asp-for="UserName"></label>
                                <input class="au-input au-input--full" asp-for="UserName" placeholder="Nome usuário">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="my-3">
                                <label asp-for="Email"></label>
                                <input class="au-input au-input--full" asp-for="Email" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="my-3">
                                <label asp-for="Password"></label>
                                <input class="au-input au-input--full" asp-for="Password" placeholder="Senha">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="my-3">
                                <label asp-for="ConfirmPassword"></label>
                                <input class="au-input au-input--full" asp-for="ConfirmPassword" placeholder="Confirmar Senha">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button class="au-btn au-btn--block au-btn--blue m-b-20" type="submit">Registrar</button>
                        </form>
                        <div class="register-link">
                            <p>
                                Já possui uma conta?
                                <a asp-action="Login">Entrar</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}