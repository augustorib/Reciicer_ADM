@model Reciicer.Models.LoginViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Registrar Usu√°rio";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div>
    <form method="post" asp-action="Register" class="text-center">
        <div class="form-group row">
            <div class="col-md-5 mx-auto">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-5 mx-auto">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-5 mx-auto">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3  mt-2 col-md-5">Registrar</button>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}