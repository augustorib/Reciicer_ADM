@model Reciicer.Models.Entities.Cliente
@{
    ViewData["Title"] = "Detalhes Cliente";
}

<h1 class="display-6 text-center mb-4">@ViewData["Title"]</h1>

<div>
    <label asp-for="Nome" class="col-form-label">@Html.DisplayNameFor(model => model.Nome)</label>
    <input asp-for="Nome" class="form-control" type="text" disabled>

    <label asp-for="Telefone" class="col-form-label">@Html.DisplayNameFor(model => model.Telefone)</label>
    <input asp-for="Telefone" class="form-control" type="text" disabled>


    <label asp-for="Email" class="col-form-label">@Html.DisplayNameFor(model => model.Email)</label>
    <input asp-for="Email" class="form-control" type="text" disabled>


    <label asp-for="CPF" class="col-form-label">@Html.DisplayNameFor(model => model.CPF)</label>
    <input asp-for="CPF" class="form-control" type="text" disabled>

   
    <a asp-action="Update" asp-route-Id="@Model.Id" class="btn btn-warning mt-2 text-white ">Atualizar <i class="fa-solid fa-user-pen"></i></a>
    <a asp-action="Index" class="btn btn-secondary mt-2">Voltar <i class="fa-solid fa-rotate-left"></i></a>
</div>