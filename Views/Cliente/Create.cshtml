@model Reciicer.Models.Entities.Cliente
@{
    ViewData["Title"] = "Adicionar Cliente";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col"> 
        <div class="container-fluid ">
            <form method="post" asp-action="Create">
                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="Nome" class="form-label">Nome:</label>
                        <input asp-for="Nome" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Telefone" class="form-label">Telefone:</label>
                        <input asp-for="Telefone" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email:</label>
                        <input asp-for="Email" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CPF" class="form-label">CPF:</label>
                        <input asp-for="CPF" class="form-control">
                    </div>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" class="btn btn-primary" value="Confirmar">
                    <a asp-action="Index" class="btn btn-secondary">Voltar <i class="fa-solid fa-rotate-left"></i></a>
                </div>
            </form>
        </div>
    </div>
</div>