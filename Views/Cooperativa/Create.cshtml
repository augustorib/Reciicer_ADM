@model Reciicer.Models.Entities.Cooperativa;

@{
    ViewData["Title"] = "Criar Cooperativa";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post" asp-action="Create">
          
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Nome" class="form-label">@Html.DisplayNameFor(model => model.Nome):</label>
                <input asp-for="Nome" class="form-control">
            </div>
            <div class="col-md-5">
                <label asp-for="Email" class="form-label">@Html.DisplayNameFor(model => model.Email):</label>
                <input asp-for="Email" class="form-control">
            </div>
        </div>

        <div class="form-group row mt-2">
            <div class="col-md-4">
                <label asp-for="CNPJ" class="form-label">@Html.DisplayNameFor(model => model.CNPJ):</label>
                <input asp-for="CNPJ" class="form-control">
            </div>
        </div>

        <div class="form-group mt-2">
            <input type="submit" class="btn btn-primary" value="Confirmar">
            <a asp-action="Index" class="btn btn-secondary">Voltar <i class="fa-solid fa-rotate-left"></i></a>
        </div>
    </form>
</div>