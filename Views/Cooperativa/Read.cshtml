@model Reciicer.Models.Entities.Cooperativa

@{
    ViewData["Title"] = "Detalhes da Cooperativa";
}

<h1 class="display-6 text-center mb-4">@ViewData["Title"]</h1>

<div>
    
    @Html.HiddenFor(model => model.Id)

    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Nome" class="form-label">@Html.DisplayNameFor(model => model.Nome):</label>
            <input asp-for="Nome" class="form-control" disabled>
        </div>
        <div class="col-md-5">
            <label asp-for="Email" class="form-label">@Html.DisplayNameFor(model => model.Email):</label>
            <input asp-for="Email" class="form-control"  disabled>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-4">
            <label asp-for="CNPJ" class="form-label">@Html.DisplayNameFor(model => model.CNPJ):</label>
            <input asp-for="CNPJ" class="form-control" disabled>
        </div>
    </div>

    <div class="form-group mt-2">
        <a asp-action="Update" asp-route-Id="@Model.Id" class="btn btn-warning text-white ">Atualizar <i class="fa-solid fa-pen"></i></a>
        <a asp-action="Index" class="btn btn-secondary">Voltar <i class="fa-solid fa-rotate-left"></i></a>
    </div>
</div>