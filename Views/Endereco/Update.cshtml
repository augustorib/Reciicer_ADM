@model Reciicer.Models.Entities.Endereco
@{
    ViewData["Title"] = "Atualizar Endere√ßo";
}

<h1 class="display-6 text-center mb-4">@ViewData["Title"]</h1>

<div>
    <form method="post" asp-action="Update">

        <label asp-for="Rua" class="col-form-label">@Html.DisplayNameFor(model => model.Rua)</label>
        <input asp-for="Rua" class="form-control" type="text" >

        <label asp-for="Numero" class="col-form-label">@Html.DisplayNameFor(model => model.Numero)</label>
        <input asp-for="Numero" class="form-control" type="text" >

        <label asp-for="Bairro" class="col-form-label">@Html.DisplayNameFor(model => model.Bairro)</label>
        <input asp-for="Bairro" class="form-control" type="text" >

        <label asp-for="Cep" class="col-form-label">@Html.DisplayNameFor(model => model.Cep)</label>
        <input asp-for="Cep" class="form-control" type="text" >

        <label asp-for="Cidade" class="col-form-label">@Html.DisplayNameFor(model => model.Cidade)</label>
        <input asp-for="Cidade" class="form-control" type="text" >

        <label asp-for="Estado" class="col-form-label">@Html.DisplayNameFor(model => model.Estado)</label>
        <input asp-for="Estado" class="form-control" type="text" >
    
                
        <button type="submit" class="btn btn-warning text-white">Atualizar <i class="fa-solid fa-user-pen"></i></button>
        <a asp-action="Index" class="btn btn-secondary mt-2">Voltar <i class="fa-solid fa-rotate-left"></i></a>
    </form>
</div>