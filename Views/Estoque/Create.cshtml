@model Reciicer.Models.EstoqueViewModels.EstoqueCreateViewModel
@{
    ViewData["Title"] = "Criar Estoque";
}

<h1>@ViewData["Title"]</h1>

<div>
        <form method="post" asp-action="Create">
          
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Estoque!.Codigo" class="form-label">@Html.DisplayNameFor(model => model.Estoque!.Codigo):</label>
                <input asp-for="Estoque!.Codigo" class="form-control">
            </div>

            <div class="col-md-5">
                <label asp-for="Estoque!.Tipo" class="form-label">@Html.DisplayNameFor(model => model.Estoque!.Tipo):</label>
                <input asp-for="Estoque!.Tipo" class="form-control">
            </div>

            <div class="col-md-4">
                <label  asp-for="Estoque!.PontoColetaId" class="form-label">Escolha um Ponto de Coleta: </label>
                <select asp-for="Estoque!.PontoColetaId" asp-items="@(new SelectList(Model.PontoColetas, "Id", "Nome"))" class="form-select form-select-md">
                    <option value=""selected>Selecione um Ponto de Coleta</option>
                </select>
            </div>
        </div>

        <div class="form-group row mt-3">
            <div class="col-md-3">
                <label asp-for="Estoque!.Capacidade" class="form-label">@Html.DisplayNameFor(model => model.Estoque!.Capacidade):</label>
                <input asp-for="Estoque!.Capacidade" class="form-control"  >
            </div>
        </div>

        <div class="form-group mt-2">
            <input type="submit" class="btn btn-primary" value="Confirmar">
            <a asp-action="Index" class="btn btn-secondary">Voltar <i class="fa-solid fa-rotate-left"></i></a>
        </div>
    </form>
</div>

