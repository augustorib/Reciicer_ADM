@model Reciicer.Models.Entities.PontuacaoMaterial
@{
    ViewData["Title"] = "Criar Pontuação";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post" asp-action="Create">

    <div class="form-group row">
        <div class="col-md-6">
            <label asp-for="Descricao" class="form-label">Nível:</label>
            <input asp-for="Descricao" class="form-control">
        </div>
        <div class="col-md-3">
            <label asp-for="PontuacaoNecessario" class="form-label">Pontos Necessários:</label>
            <input asp-for="PontuacaoNecessario" class="form-control">
        </div>
        <div class="col-md-3">
            <label asp-for="PontosPerdaFrequencia" class="form-label">Penalidade:</label>
            <input asp-for="PontosPerdaFrequencia" class="form-control">
        </div>
    </div>

        <div class="form-group mt-2">
            <input type="submit" class="btn btn-primary" value="Confirmar">
            <a asp-action="Index" class="btn btn-secondary">Voltar <i class="fa-solid fa-rotate-left"></i></a>
        </div>
    </form>
</div>