@model Reciicer.Models.Entities.Reciclagem
@{
    ViewData["Title"] = "Atualizar Reciclagem";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post" asp-action="Update">

        <div class="form-group row mt-2">

            <div class="col-md-6 ">
                <label asp-for="DataOperacao" class="form-label">@Html.DisplayNameFor(model => model.DataOperacao)</label>
                <input asp-for="DataOperacao" class="form-control" >
            </div>

            <div class="col-md-3">
                <label asp-for="PontuacaoGanha" class="form-label">@Html.DisplayNameFor(model => model.PontuacaoGanha)</label>
                <input asp-for="PontuacaoGanha" class="form-control" disabled>
            </div>
      
        </div>

        <div class="form-group mt-2">
            <button type="submit" class="btn btn-warning text-white">Atualizar <i class="fa-solid fa-pen"></i></button>
            <a asp-action="Index" class="btn btn-secondary">Voltar <i class="fa-solid fa-rotate-left"></i></a>
        </div>
    </form>
</div>