@model Reciicer.Models.ReciclagemViewModel;
@{
    ViewData["Title"] = "Adicionar Reciclagem";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col">
        <form method="post" asp-action="Create">    

        <div class="form-group">
            <label  asp-for="ClienteId" class="control-label">Escolha um cliente: </label>
            <select asp-for="ClienteId" asp-items="@(new SelectList(Model.Clientes, "Id", "Nome"))" class="form-select form-select-md ">
                <option value=""selected>Selecione um Cliente</option>
            </select>
        </div>
        
        @* <div class="form-group row">
            <div class="col-md-4">
                <label class="form-label">Quantos materiais ser√£o reciclados:</label> 
                <input type="number"class="form-control" id="QtdMateriais"></input>       
            </div>
        </div> *@

        @for(int i = 0; i < 3; i++)
        {
            <div class="form-group row mt-2">
                <div class="col-md-6 ">
                    <label  asp-for="MaterialId" class="form-label">Escolha um Material: </label>
                    <select asp-for="MaterialId" asp-items="@(new SelectList(Model.Materiais, "Id", "Nome"))" class="form-select form-select-md">
                        <option value=""selected>Selecione um Material</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="Material_Reciclagem.Peso" class="form-label">Peso:</label>
                    <input asp-for="Material_Reciclagem.Peso" class="form-control">
                </div>
                <div class="col-md-3">
                    <label asp-for="Material_Reciclagem.Quantidade" class="form-label">Quantidade:</label>
                    <input asp-for="Material_Reciclagem.Quantidade" class="form-control">
                </div>
            </div>
        }
        <div class="form-group mt-2">
            <input type="submit" class="btn btn-primary" value="Confirmar">
            <a asp-action="Index" class="btn btn-secondary">Voltar <i class="fa-solid fa-rotate-left"></i></a>
        </div>

        </form>
    </div>
</div>