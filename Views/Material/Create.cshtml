@model Reciicer.Models.MaterialViewModels.MaterialCreateViewModel
@{
    ViewData["Title"] = "Criar Material";
}

<h1 class="display-6 text-center mb-4">@ViewData["Title"]</h1>

<div>
    <form method="post" asp-action="Create">

        <div class="form-group row">
            <div class="col-md-6">
                <label  asp-for="Material!.TipoMaterialId" class="control-label">Escolha um Tipo Material: </label>
                <select asp-for="Material!.TipoMaterialId" asp-items="@(new SelectList(Model.TipoMateriais, "Id", "Nome"))" class="form-select form-select-md ">
                    <option value=""selected>Selecione um Tipo </option>
                </select>
            </div>
        </div>

        <hr class="my-3">

        <div class="form-group row">
            <div class="col-md-5">
                <label asp-for="Material!.Nome" class="form-label">@Html.DisplayNameFor(model => model.Material!.Nome)</label>
                <input asp-for="Material!.Nome" class="form-control">
            </div>
            <div class="col-md-3">
                <label asp-for="Material!.Descricao" class="form-label">@Html.DisplayNameFor(model => model.Material!.Descricao)</label>
                <input asp-for="Material!.Descricao" class="form-control">
            </div>
            <div class="col-md-3">
                <label asp-for="Material!.TempoDegradacao" class="form-label">@Html.DisplayNameFor(model => model.Material!.TempoDegradacao):</label>
                <input asp-for="Material!.TempoDegradacao" class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Material!.PontuacaoPeso" class="form-label">@Html.DisplayNameFor(model => model.Material!.PontuacaoPeso)</label>
                <input asp-for="Material!.PontuacaoPeso" class="form-control">
            </div>
            <div class="col-md-4">
                <label asp-for="Material!.PontuacaoUnidade" class="form-label">@Html.DisplayNameFor(model => model.Material!.PontuacaoUnidade)</label>
                <input asp-for="Material!.PontuacaoUnidade" class="form-control">
            </div>
        </div>

        <div class="form-group mt-2">
            <input type="submit" class="btn btn-primary" value="Confirmar">
            <a asp-action="Index" class="btn btn-secondary">Voltar <i class="fa-solid fa-rotate-left"></i></a>
        </div>

    </form>
</div>