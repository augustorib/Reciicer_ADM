@model Reciicer.Models.Entities.Nivel
@{
    ViewData["Title"] = "Detalhes Nível";
}

<h1>@ViewData["Title"]</h1>

<div>
    <div class="form-group row">
        <div class="col-md-6">
            <label asp-for="Descricao" class="form-label">Nível:</label>
            <input asp-for="Descricao" class="form-control" disabled>
        </div>
        <div class="col-md-2">
            <label asp-for="PontuacaoNecessario" class="form-label">Pontos Necessários:</label>
            <input asp-for="PontuacaoNecessario" class="form-control" disabled>
        </div>
        <div class="col-md-2">
            <label asp-for="PontosPerdaFrequencia" class="form-label">Penalidade:</label>
            <input asp-for="PontosPerdaFrequencia" class="form-control" disabled>
        </div>
        <div class="col-md-2">
            <label asp-for="Cor" class="form-label">@Html.DisplayNameFor(modelItem => modelItem.Cor)</label>
            <input type="color" asp-for="Cor" class="form-control form-control-color" disabled >
        </div>

        <div class="form-group mt-2">
            <a asp-action="Update" asp-route-Id="@Model.Id" class="btn btn-warning text-white ">Atualizar <i class="fa-solid fa-pen"></i></a>
            <a asp-action="Index" class="btn btn-secondary">Voltar <i class="fa-solid fa-rotate-left"></i></a>
        </div>
    </div>
</div>