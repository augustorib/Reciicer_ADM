@model Reciicer.Models.TipoMaterialViewModels.TipoMaterialCreateView
@{
    ViewData["Title"] = "Atualizar Tipo Material";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post" asp-action="Update">
        
         @Html.HiddenFor(model => model.TipoMaterial.Id)

        <div class="form-group">
            <label  asp-for="TipoMaterial.MaterialId" class="control-label">Escolha um Material: </label>
            <select asp-for="TipoMaterial.MaterialId" asp-items="@(new SelectList(Model.Material, "Id", "Nome", Model.TipoMaterial.MaterialId))" class="form-select form-select-md ">
            </select>
        </div>

        <hr class="my-3">

        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="TipoMaterial.Nome" class="form-label">@Html.DisplayNameFor(model => model.TipoMaterial.Nome)</label>
                <input asp-for="TipoMaterial.Nome" class="form-control">
            </div>
            <div class="col-md-5">
                <label asp-for="TipoMaterial.Descricao" class="form-label">@Html.DisplayNameFor(model => model.TipoMaterial.Descricao)</label>
                <input asp-for="TipoMaterial.Descricao" class="form-control">
            </div>
            <div class="col-md-3">
                <label asp-for="TipoMaterial.TempoDegradacao" class="form-label">@Html.DisplayNameFor(model => model.TipoMaterial.TempoDegradacao):</label>
                <input asp-for="TipoMaterial.TempoDegradacao" class="form-control">
            </div>
        </div>

        <div class="form-group mt-2">
            <button type="submit" class="btn btn-warning text-white">Atualizar <i class="fa-solid fa-pen"></i></button>
            <a asp-action="Index" class="btn btn-secondary">Voltar <i class="fa-solid fa-rotate-left"></i></a>
        </div>
    </form>
</div>