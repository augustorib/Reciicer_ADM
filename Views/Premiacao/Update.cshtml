@model Reciicer.Models.PremiacaoViewModels.PremiacaoCreateView
@{
    ViewData["Title"] = "Atualizar Premiação";
}

<h1>@ViewData["Title"]</h1>

<div>
 <form method="post" asp-action="Update">
     
    @Html.HiddenFor(model => model.Premiacao.Id)
    
    <div class="form-group row ">
        <div class="col-md-6">
            <label asp-for="Premiacao.NivelId" class="form-label">Escolha um Tipo de Material: </label>
            <select asp-for="Premiacao.NivelId" asp-items="@(new SelectList(Model.Nivel, "Id", "Descricao", Model.Premiacao.NivelId))" class="form-select form-select-md">
            </select>
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Premiacao.Nome" class="form-label">@Html.DisplayNameFor(model => model.Premiacao.Nome):</label>
            <input asp-for="Premiacao.Nome" class="form-control">
        </div>
        <div class="col-md-5">
            <label asp-for="Premiacao.Descricao" class="form-label">@Html.DisplayNameFor(model => model.Premiacao.Descricao):</label>
            <input asp-for="Premiacao.Descricao" class="form-control">
        </div>
        <div class="col-md-3">
            <label asp-for="Premiacao.Ativo">@Html.DisplayNameFor(model => model.Premiacao.Ativo):</label>
            <div class="mt-3 px-3">
                <input asp-for="Premiacao.Ativo" >
            </div>
        </div>
    </div>

        <div class="form-group mt-2">
            <button type="submit" class="btn btn-warning text-white">Atualizar <i class="fa-solid fa-pen"></i></button>
            <a asp-action="Index" class="btn btn-secondary">Voltar <i class="fa-solid fa-rotate-left"></i></a>
        </div>
    </form>
</div>