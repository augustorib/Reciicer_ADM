@model Reciicer.Models.PremiacaoViewModels.PremiacaoCreateView
@{
    ViewData["Title"] = "Criar Premiação";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post" asp-action="Create">
     
        <div class="form-group row ">
            <div class="col-md-6">
                <label asp-for="Premiacao.NivelId" class="form-label">Escolha um Nível: </label>
                <select asp-for="Premiacao.NivelId" asp-items="@(new SelectList(Model.Nivel, "Id", "Descricao"))" class="form-select form-select-md">
                    <option value=""selected>Selecione um Nível</option>
                </select>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Premiacao.Nome" class="form-label">@Html.DisplayNameFor(model => model.Premiacao.Nome):</label>
                <input asp-for="Premiacao.Nome" class="form-control">
            </div>
            <div class="col-md-5">
                <label asp-for="Premiacao.Descricao" class="form-label">@Html.DisplayNameFor(model => model.Premiacao.Descricao):</label>
                <input asp-for="Premiacao.Descricao" class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Premiacao.DataInicial" class="form-label">@Html.DisplayNameFor(model => model.Premiacao.DataInicial):</label>
                <input type="date" asp-for="Premiacao.DataInicial" class="form-control">
            </div>
            <div class="col-md-4">
                <label asp-for="Premiacao.DataFinal" class="form-label">@Html.DisplayNameFor(model => model.Premiacao.DataFinal):</label>
                <input type="date" asp-for="Premiacao.DataFinal" class="form-control">
            </div>
            <div class="col-md-3">
                <label asp-for="Premiacao.Ativo">@Html.DisplayNameFor(model => model.Premiacao.Ativo):</label>
                <div class="mt-3 px-3">
                    <input asp-for="Premiacao.Ativo" >
                </div>
            </div>
        </div>

        <div class="form-group mt-2">
            <input type="submit" class="btn btn-primary" value="Confirmar">
            <a asp-action="Index" class="btn btn-secondary">Voltar <i class="fa-solid fa-rotate-left"></i></a>
        </div>
    </form>
</div>