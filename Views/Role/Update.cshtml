@model Reciicer.Models.RoleViewModels.UserRoleViewModel
@{
    ViewData["Title"] = "Atualizar Usuário";
}

<h1 class="display-6 text-center mb-4">@ViewData["Title"]</h1>

<div>
    
    <form method="post" asp-action="Update">

        <div class="form-group row my-4">
            <div class="col-md-4">
                <label  asp-for="RoleId" class="control-label">Escolha uma função: </label>
                <select asp-for="RoleId" asp-items="@(new SelectList(Model.RolesList, "Id", "Name", Model.RoleId))" class="form-select form-select-md ">
                </select>
            </div>

            <div class="col-md-5">
                <label  asp-for="PontoColetaId" class="control-label">Escolha um ponto de coleta: </label>
                <select asp-for="PontoColetaId" asp-items="@(new SelectList(Model.PontoColetas, "Id", "Nome", Model.PontoColeta))" class="form-select form-select-md ">
                </select>
            </div>
        </div>

        <div class="form-group row my-4">
            <div class="col-md-5">
                <label asp-for="UserName" class="form-label">@Html.DisplayNameFor(model => model.UserName)</label>
                <input asp-for="UserName" class="form-control" >
            </div>
            <div class="col-md-3">
                <label asp-for="Email" class="form-label">@Html.DisplayNameFor(model => model.Email)</label>
                <input asp-for="Email" class="form-control" >
            </div>
        </div>


        <div class="form-group mt-2">
            <button type="submit" class="btn btn-warning text-white">Atualizar <i class="fa-solid fa-pen"></i></button>
            <a asp-action="Index" class="btn btn-secondary">Voltar <i class="fa-solid fa-rotate-left"></i></a>
        </div>

    </form>
</div>