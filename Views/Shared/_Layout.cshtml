﻿@using Microsoft.AspNetCore.Identity
@using Reciicer.Models.Entities
@inject SignInManager<UsuarioIdentity> _signInManager
@inject UserManager<UsuarioIdentity> _userManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Main CSS-->
    <link href="~/css/theme.css" rel="stylesheet" media="all">
    

    <!-- Fontfaces CSS-->
    <link  rel=stylesheet href="~/css/font-face.css" rel="stylesheet" media="all">

    <link  rel=stylesheet href="~/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.css" />
    <link href="https://cdn.jsdelivr.net/npm/tom-select@2.0.0/dist/css/tom-select.bootstrap5.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/vendor/animsition/animsition.min.css" />
    <link rel="stylesheet" href="~/vendor/perfect-scrollbar/perfect-scrollbar.css" />
    <link rel="stylesheet" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <link href="~/css/site.css" rel="stylesheet" media="all">
    
   
</head>
<body class="animsition">

    @if(_signInManager.IsSignedIn(User))
    {   
        <div class="page-wrapper">    
            
            <partial name="_HeaderMobilePartial.cshtml"/> 

            <partial name="_MenuSideBarPartial.cshtml"/> 

            <partial name="_HeaderPartial.cshtml"/>

            <!-- PAGE CONTAINER-->
            <div class="page-container">
                
                
                      
                <!-- MAIN CONTENT-->
                <div class="main-content ">
                    <main role="main" class="section__content section__content--p30">
                        @RenderBody()
                    </main>
                </div>
                <!-- END MAIN CONTENT-->
                
            </div>
            <!-- END PAGE CONTAINER-->

        </div>
    }
    else
    {
        <main role="main">
            @RenderBody()
        </main>
    
    }
    
    <script src="~/lib/jquery/dist/jquery.min.js" ></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.0.0/dist/js/tom-select.complete.min.js"></script>

    <!-- Vendor JS -->
    <script src="~/vendor/slick/slick.min.js"></script>
    <script src="~/vendor/wow/wow.min.js"></script>
    <script src="~/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <script src="~/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/vendor/counter-up/jquery.counterup.min.js"></script>
    <script src="~/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/animsition/animsition.min.js"></script>
        
    <!-- Main JS-->
    <script src="~/js/main.js" asp-append-version="true"></script> 
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>