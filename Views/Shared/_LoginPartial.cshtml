@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager


<ul class="nav-bar nav">
    @if(signInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-decoration-none" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @User.Identity!.Name
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-area="" asp-action="Logout" asp-controller="Login" >Logout <i class="fa-solid fa-right-from-bracket"></i></a></li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-action="Login" asp-controller="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-action="Register" asp-controller="Login">Registrar</a>
        </li>
    }
</ul>    